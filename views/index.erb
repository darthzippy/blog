<div id="posts">
  <% for post in @posts %>
    <h2><a href="/posts/<%= post.to_url %>" title="Permanent link to: '<%= post.title %>'"><%= post.title %></a></h2>

    <div class="dateline">
      <%= date_to_string post.published_at %>
    </div>

    <% unless post.categories.blank? %>
    <div class="categories">Filed under <%= post.categories %></div>
    <% end %>
    
    <article>
      <%== textile post.body %>
    </article>
    <hr class="front">
    </br>
  <% end %>
</div>

<ul id="post_archive">
  <% for post in @archives %>
    <li>
      <a class="nine columns offset-by-four" href="/posts/<%= post.to_url %>"><%= post.title %></a>
      <span class="three columns"><%= date_to_string post.published_at %></span>
    </li>
  <% end %>
</ul>